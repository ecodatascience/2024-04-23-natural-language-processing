@article{ WOS:000436897000003,
Author = {Porras, Gabriel Lopez and Stringer, Lindsay C. and Quinn, Claire H.},
Title = {Unravelling Stakeholder Perceptions to Enable Adaptive Water Governance
   in Dryland Systems},
