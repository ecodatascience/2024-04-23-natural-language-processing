@article{ WOS:000524876500007,
Author = {Perrotti, Daniela and Hyde, Katherine and Pena, Daniel Otero},
Title = {Can water systems foster commoning practices? Analysing leverages for
   self-organization in urban water commons as social-ecological systems},
Journal = {SUSTAINABILITY SCIENCE},
Year = {2020},
