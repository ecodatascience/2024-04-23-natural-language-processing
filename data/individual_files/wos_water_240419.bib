@article{ WOS:000381406100001,
Author = {Hileman, Jacob and Hicks, Paul and Jones, Richard},
Title = {An alternative framework for analysing and managing conflicts in
   integrated water resources management (IWRM): linking theory and
   practice},
Journal = {INTERNATIONAL JOURNAL OF WATER RESOURCES DEVELOPMENT},
Year = {2016},
Volume = {32},
Number = {5},
Pages = {675-691},
Month = {SEP},
Abstract = {Research on water resource conflicts needs to be better aligned with
   practitioner approaches to water resources development, chiefly
   integrated water resources management (IWRM). This paper bridges the gap
   between research and practice through a novel application of the
   social-ecological systems framework to a set of 10 conflict cases from
   an IWRM initiative in rural Central America. The conflicts in the
   empirical cases are found to be primarily the result of socio-political
   variables, particularly low levels of trust and social capital, and
   peacebuilding is suggested as a promising approach to address this suite
   of conflicts. The paper concludes with a proposed course of research
