@article{ WOS:000401392400004,
Author = {Baldwin, Claudia and Smith, Tanzi and Jacobson, Chris},
Title = {Love of the land: Social-ecological connectivity of rural landholders},
Journal = {JOURNAL OF RURAL STUDIES},
Year = {2017},
Volume = {51},
Pages = {37-52},
Month = {APR},
Abstract = {Understanding how landholders relate to the land and water they manage
   is crucial to sustainable natural resource management policy and
   practice. This study focuses on the relationship that rural landholders,
